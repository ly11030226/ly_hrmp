<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_message_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_main_bg">

    <com.hrmp.view.Titlebar
        android:id="@+id/message_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/message_titlebar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="16dp"
                android:background="@color/info_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/msg_detail_textview_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_detail_send_name_title" />

                <TextView
                    android:id="@+id/msg_detail_senduser"
                    style="@style/msg_detail_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/info_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/msg_detail_textview_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_detail_send_time_title"
                    android:textColor="@color/info_common_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/msg_detail_sendtime"
                    style="@style/msg_detail_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="2014-1-3" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/info_line_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="16dp"
                android:background="@color/info_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/msg_detail_textview_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_detail_title_title" />

                <TextView
                    android:id="@+id/msg_detail_title"
                    style="@style/msg_detail_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/info_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_content_title"
                    style="@style/msg_detail_textview_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_detail_content_title" />

                <TextView
                    android:id="@+id/msg_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_content_title"
                    android:padding="16dp"
                    android:text=""
                    android:textColor="@color/info_little_title_text_color"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/info_line_color" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
