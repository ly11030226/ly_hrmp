<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_main">

    <com.hrmp.view.Titlebar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.hrmp.view.Titlebar>

    <com.hrmp.view.BottomButtonBar
        android:id="@+id/bottom_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </com.hrmp.view.BottomButtonBar>

    <com.hrmp.view.MyViewPager
        android:id="@+id/myviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_button_bar"
        android:layout_below="@+id/title_bar"></com.hrmp.view.MyViewPager>

</RelativeLayout>
