<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_bg"
                android:clickable="true"
                android:focusable="true">


    <TextView
        android:id="@+id/tv_enroll_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="2017-01-01"
        android:textColor="@color/edittext_hint_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_enroll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/tv_enroll_date"
        android:ellipsize="end"
        android:lines="1"
        android:paddingRight="16dp"
        android:text="招工主题"
        android:textColor="@color/edittext_hint_color"
        android:textSize="15sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_enroll_title"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp"
        android:layout_toLeftOf="@+id/tv_enroll_date"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_enroll_businessnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLength="12"
            android:text="W000011"
            android:textColor="@color/edittext_hint_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_enroll_workarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLength="7"
            android:text="开发区"
            android:textColor="@color/edittext_hint_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_enroll_hirenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLength="5"
            android:text="6人"
            android:textColor="@color/edittext_hint_color"
            android:textSize="14sp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/bottom_view_line"/>


</RelativeLayout>
