<resources>

    <!-- Application theme. -->
    <style name="activityTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:textCursorDrawable">@mipmap/time_sms_etittext_cursor</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="msg_detail_textview_title">
        <item name="android:textColor">@color/info_common_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="msg_detail_textview">
        <item name="android:textColor">@color/info_little_title_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 自定义dialog标题、内容、按钮字体设置 -->
    <style name="dialog_normal_title">
        <item name="android:textColor">@color/dialog_normal_title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_normal_content">
        <item name="android:textColor">@color/dialog_normal_content</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="dialog_normal_cancel_text">
        <item name="android:textColor">@color/dialog_normal_cancle_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="dialog_normal_ok_text">
        <item name="android:textColor">@color/dialog_normal_ok_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="float_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@null</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <style name="style_common_button">
        <item name="android:background">@drawable/selector_common_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
